<AuthScreenMobileView>:
    orientation: "vertical"
    #padding: [60, 200, 60, 260]
    spacing: "10dp"

    md_bg_color: (1, 1, 0.5, 1)

    MDRaisedButton:
        text: "Sign In"
        pos_hint_y: None
        y: root.top/2 - self.height/2
        # pos_hint: {"center_x": 0.5, "center_y": 0.5}
        theme_text_color: "Primary"
        md_bg_color: app.theme_cls.primary_dark
        font_style: "Button"
        on_press: print(root.top) 
        # root.master.create_screen(self.text)
    
    MDRaisedButton:
        text: "Sign Up"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        theme_text_color: "Primary"
        md_bg_color: app.theme_cls.primary_dark
        font_style: "Button"
        on_press: root.master.create_screen(self.text)
    
# -------------------------------------------------------------------------------------
# Variables
#: set sign_up_form_font_color (0, 0, 0, 1)
#: set sign_up_form_field_height "20dp"
#: set sign_up_form_progressbar_height "20dp"
#: set sign_up_form_dropdown_height "40dp"

# comman class used in the sign-up-scree
<CLabel@MDLabel>:
    theme_text_color: "Custom"
    text_color: sign_up_form_font_color

<CTextField@MDTextField>:
    required: True

<CRaisedButton@MDRaisedButton>:
    size_hint_y: None
    height: "40dp"

<SignUpScreenMobileView>:
    padding: ["20dp", "80dp", "20dp", "80dp"]   

    md_bg_color: app.theme_cls.primary_light

    # creating a form for the sign-up
    MDBoxLayout:
        orientation: "vertical"

        md_bg_color: app.theme_cls.accent_dark
        radius: 10
        
        adaptive_height: True

        MDLabel:
            font_style: "Button"
            text: "Sign Up"
            size_hint: None, None
            size: "60dp", "40dp"
            pos_hint: {"center_x": 0.5 - (self.width/2)/100}

            md_bg_color: (1, 1, 1, 1)

        # adding form field
        MDGridLayout:
            id: sign_up_form
            rows: 5
            cols: 2
            padding: "2dp"
            spacing: ["5dp", "20dp"]

            adaptive_height: True
            row_default_height: "20dp"

            md_bg_color: (0.93, 0.89, 0.69, 1)

            CLabel:
                text: "Username :"

            CTextField:

            CLabel:
                text: "Email :"

            CTextField:
                on_text_validate: root.master.on_submit_info(self)

            CLabel:
                text: "Password :"

            CTextField:

            CLabel:
                text: "Strong :"

            MDProgressBar:
                value: 50
                size_hint_y: None
                height: "5dp"

            CLabel:
                text: "Profession :"

        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: "60dp"

            CheckBox:
            
            MDLabel:
                text: "Term & Policy"

            MDFillRoundFlatButton:
                font_style: "Button"
                text: "submit"
